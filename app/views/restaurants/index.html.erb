<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      <h1>Your restaurants</h1>
      <ul class="list">
        <% @restaurants.each do |resto| %>
          <li>
            <h3>
              <%= link_to resto.name, restaurant_path(resto.id) %>
            </h3>
            <p><%= resto.category.capitalize %> food.</p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
