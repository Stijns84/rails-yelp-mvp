<div class="container">
  <div class="row">
    <div id="restaurant" class="col-xs-10 col-xs-offset-1">
      <h2><%= @restaurant.name %></h2>

      <br>
      <p>Located in <%= @restaurant.address %></p>
      <p>We serve <%= @restaurant.category %> food.</p>
      <p>Contact us at: <%= @restaurant.phone_number %>.</p>
      <br>

      <h3>Reviews:</h3>
      <ul>
        <% @restaurant.reviews.each do |review| %>
          <li>
            <p><%= review.content %></p>
            <p>rating: <%= review.rating %></p>
          </li>
        <% end %>
      </ul>

      <h3>Add your own review</h3>
      <%= render 'formforreview' %>
      <p>
        <%= link_to "Go back to the restaurants list", restaurants_path %>
      </p>
    </div>
  </div>
</div>
